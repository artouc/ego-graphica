{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "paths": {
            "~/*": ["./*"],
            "@egographica/shared": ["../../packages/shared/src"],
            "@egographica/shared/*": ["../../packages/shared/src/*"]
        }
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", ".nitro", ".output"]
}
